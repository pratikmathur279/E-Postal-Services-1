 st.setString(14,pincode);
 st.setString(15,phoneno);
 st.setString(16,accno);
 st.setString(17,bankname);

 int i= st.executeUpdate();

 if(i!=0)
{
	response.sendRedirect("home.jsp");
}
 else
{
	out.println("Not Executed");
}
 
 } 
 
